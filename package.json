{
  "ava": {
    "files": [
      "test/**/*"
    ],
    "helpers": [
      "**/helpers/**/*"
    ],
    "verbose": "true"
  },
  "scripts": {
    "start": "http-server -c-1",
    "test": "nyc ava",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix",
    "coverage": "nyc --reporter=lcov npm test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "ava": "^2.4.0",
    "http-server": "^0.12.0",
    "jquery": "^3.5.0",
    "jsdom": "^15.2.1",
    "nyc": "^15.0.0",
    "sinon": "^8.0.2",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "standard": {
    "globals": [
      "test",
      "expect",
      "describe",
      "beforeEach",
      "afterEach",
      "it",
      "context",
      "before",
      "assert",
      "specify"
    ],
    "ignore": [
      "/e2e/fixtures"
    ]
  }
}
