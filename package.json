{
  "ava": {
    "files": [
      "test/**/*"
    ],
    "helpers": [
      "**/helpers/**/*"
    ],
    "verbose": "true"
  },
  "scripts": {
    "start": "http-server -c-1",
    "test": "nyc ava",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "cy:verify": "cypress verify",
    "lint": "standard | snazzy",
    "coverage": "nyc --reporter=lcov npm test"
  },
  "devDependencies": {
    "ava": "^5.2.0",
    "cypress": "^3.8.1",
    "http-server": "^0.12.0",
    "jquery": "^3.5.0",
    "jsdom": "^15.2.1",
    "nyc": "^15.0.0",
    "sinon": "^8.0.2",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "standard": {
    "globals": [
      "cy",
      "it",
      "describe",
      "context",
      "before",
      "beforeEach",
      "expect",
      "assert",
      "specify"
    ],
    "ignore": [
      "/cypress/integration/examples"
    ]
  }
}
