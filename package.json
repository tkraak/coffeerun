{
  "type": "commonjs",
  "ava": {
    "files": [
      "test/**/*"
    ],
    "helpers": [
      "**/helpers/**/*"
    ],
    "verbose": "true"
  },
  "scripts": {
    "start": "http-server -c-1",
    "test": "nyc ava",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix",
    "coverage": "nyc --reporter=lcov npm test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "ava": "^2.4.0",
    "http-server": "^14.1.1",
    "jquery": "^3.7.1",
    "jsdom": "^27.4.0",
    "nyc": "^17.1.0",
    "sinon": "^21.0.1",
    "snazzy": "^9.0.0",
    "standard": "^17.1.2"
  },
   "engines": {
     "node": ">=20.0.0"
   },
  "standard": {
    "globals": [
      "test",
      "expect",
      "describe",
      "beforeEach",
      "afterEach",
      "it",
      "context",
      "before",
      "assert",
      "specify"
    ],
    "ignore": [
      "/e2e/fixtures"
    ]
  }
}
