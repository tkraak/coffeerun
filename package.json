{
  "ava": {
    "verbose": "true"
  },
  "scripts": {
    "start": "http-server -c-1",
    "test": "npm run lint && nyc ava",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "cy:verify": "cypress verify",
    "lint": "standard | snazzy",
    "coveralls": "nyc --reporter=lcov ava && cat ./coverage/lcov.info | coveralls"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "coveralls": "^3.0.2",
    "cypress": "^3.1.1",
    "http-server": "^0.11.1",
    "jquery": "^3.3.1",
    "jsdom": "^13.0.0",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1",
    "snazzy": "^8.0.0",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "standard": {
    "globals": [
      "cy",
      "it",
      "describe",
      "context",
      "before",
      "beforeEach",
      "expect",
      "assert",
      "specify"
    ],
    "ignore": [
      "/cypress/integration/examples"
    ]
  }
}
